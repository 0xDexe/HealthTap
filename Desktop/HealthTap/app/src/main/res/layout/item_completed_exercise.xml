<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/completed_exercise_cv"
    style="@style/journal_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_view_margin"
    android:checkable="true"
    android:clickable="true"
    android:longClickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <ImageView
                android:id="@+id/completed_exercise_type_icon_civ"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:contentDescription="@string/exercise_image_description"
                android:layout_centerVertical="true"
                android:paddingStart="8dp"
                android:paddingEnd="16dp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/completed_exercise_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@id/completed_exercise_type_icon_civ"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@id/completed_exercise_type_icon_civ"
                android:paddingBottom="4dp"
                android:textAppearance="@style/open_sans_title" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/completed_exercise_description_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/completed_exercise_name_tv"
                android:layout_toEndOf="@id/completed_exercise_type_icon_civ"
                android:textAppearance="@style/open_sans_body2" />

        </RelativeLayout>

        <View
            android:id="@+id/workout_divider"
            style="@style/Divider" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/has_note_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingTop="4dp"
            android:paddingEnd="16dp"
            android:paddingBottom="4dp"
            android:textAppearance="@style/open_sans_body2" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>